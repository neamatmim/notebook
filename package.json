{
  "name": "notebook",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/node": "^22.13.14",
      "@orpc/server": "^1.12.2",
      "@orpc/client": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.18",
      "drizzle-orm": "^0.45.1",
      "@types/pg": "^8.16.0"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @notebook/db db:push",
    "db:studio": "turbo -F @notebook/db db:studio",
    "db:generate": "turbo -F @notebook/db db:generate",
    "db:migrate": "turbo -F @notebook/db db:migrate",
    "db:start": "turbo -F @notebook/db db:start",
    "db:watch": "turbo -F @notebook/db db:watch",
    "db:stop": "turbo -F @notebook/db db:stop",
    "db:down": "turbo -F @notebook/db db:down",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "prepare": "husky",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only"
  },
  "dependencies": {
    "@notebook/env": "workspace:*",
    "dotenv": "catalog:",
    "nitro": "npm:nitro-nightly@3.0.1-20260128-211656-ae83c97e",
    "nitro-nightly": "3.0.1-20260128-211656-ae83c97e",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@notebook/config": "workspace:*",
    "@types/node": "catalog:",
    "husky": "latest",
    "lint-staged": "latest",
    "oxfmt": "latest",
    "oxlint": "latest",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.2.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.8"
}
